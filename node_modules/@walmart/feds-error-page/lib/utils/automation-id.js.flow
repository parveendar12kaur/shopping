const PRODUCTION_ENV = "production";

export const getDataAutomationId = (id, context, checkProduction = true) => {
  if (!checkProduction || (process && process.env.NODE_ENV !== PRODUCTION_ENV)) {
    return context ? `${context}-${id}` : id;
  }
  return undefined;
};

export const getDataAutomationIdPair = (id, context) => {
  const automationKey =
    process && process.env.NODE_ENV !== PRODUCTION_ENV ? "data-automation-id" : "data-tl-id";
  return {
    [automationKey]: getDataAutomationId(id, context, false)
  };
};
